<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="KakuroGame.EasyLevelPage"
    NavigationPage.HasNavigationBar="False">

 <StackLayout>

        <Frame Style="{StaticResource Background}">

            <StackLayout>

                <StackLayout  >
                    <Label Text="CHOOSE YOUR LEVEL" Style="{StaticResource labelIcon}" FontAttributes="Bold" />        
                </StackLayout>

                <StackLayout  Margin="0,100,0,0">

                    <BoxView Style="{StaticResource line}"/>
                    <BoxView Style="{StaticResource line}"/>
                    <BoxView Style="{StaticResource line}"/>
                    <Label Text="3x3" Style="{StaticResource labelIcon}" />
                    <Button Text="Done" Style="{StaticResource buttons}" x:Name="btnDone" Clicked="btnDone_Clicked"/>


                </StackLayout>

            </StackLayout>


            
        </Frame>

    </StackLayout>
</ContentPage>

