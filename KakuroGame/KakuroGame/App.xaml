                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>-->


            <Style x:Key="Bubble2" TargetType="Frame">
                <Setter Property="BorderColor" Value="Black"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HeightRequest" Value="40"/>
                <Setter Property="WidthRequest" Value="120"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush>
                            <GradientStop Color="Black" Offset="0.1"/>
                            <GradientStop Color="White" Offset="1.0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BubbleRecord" TargetType="Frame">
                <Setter Property="BorderColor" Value="Black"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="VerticalOptions" Value="FillAndExpand"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="LightGray" Offset="0.1"/>
                            <GradientStop Color="Black" Offset="1.0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="Inputs" TargetType="Entry">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="MaxLength" Value="10"/>
            </Style>

            <Style x:Key="Input3x3" TargetType="Entry">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="PlaceholderColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="Margin" Value="45"/>
                <Setter Property="MaxLength" Value="1"/>
                <Setter Property="Keyboard" Value="Numeric"/>
            </Style>

            <Style x:Key="Input4x4" TargetType="Entry">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="PlaceholderColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="Margin" Value="30"/>
                <Setter Property="MaxLength" Value="1"/>
                <Setter Property="Keyboard" Value="Numeric"/>
            </Style>

            <Style x:Key="Input5x5" TargetType="Entry">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="PlaceholderColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="Margin" Value="27"/>
                <Setter Property="MaxLength" Value="1"/>
                <Setter Property="Keyboard" Value="Numeric"/>
            </Style>

            <Style x:Key="FrameGame" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="Black"/>
                <Setter Property="BorderColor" Value="White"/>
                <Setter Property="Padding" Value="0"/>
            </Style>


            <Style x:Key="diagonalLineBased" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Rotation" Value="46"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="Margin" Value="-20,5,-20,0"/>
            </Style>

            <Style x:Key="diagonalLineTop3x3" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Rotation" Value="46"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="Margin" Value="-20,45,-20,0"/>
            </Style>

            <Style x:Key="diagonalLineLeft3x3" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Rotation" Value="46"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="Margin" Value="-20,-50,-20,0"/>
            </Style>

            <Style x:Key="diagonalLine2" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Rotation" Value="47"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="Margin" Value="-15,0,-22,42"/>
            </Style>

            <Style x:Key="diagonalLine4x4Top" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Rotation" Value="46"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="Margin" Value="-15,0,-20,-42"/>
            </Style>

            <Style x:Key="diagonalLine5x5Top" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Rotation" Value="48"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
                <Setter Property="Margin" Value="-13,0,-12,-42"/>
            </Style>

            <Style x:Key="Bubble3x3" TargetType="Frame">
                <Setter Property="BorderColor" Value="Black"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0,2">
                            <GradientStop Color="Green" Offset="0.0"/>
                            <GradientStop Color="Blue" Offset="1.0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="Bubble4x4" TargetType="Frame">
                <Setter Property="BorderColor" Value="Black"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="LightGreen" Offset="0.0"/>
                            <GradientStop Color="Yellow" Offset="1.0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="Bubble5x5" TargetType="Frame">
                <Setter Property="BorderColor" Value="Black"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="20"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="Yellow" Offset="0.0"/>
                            <GradientStop Color="Red" Offset="1.0" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--Explicit style: Give name to style pal warning de la prof-->
            <Style x:Key="warningButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Black"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="AnchorX" Value="0"/>
            </Style>

        </ResourceDictionary >

       

    </Application.Resources>
</Application>
